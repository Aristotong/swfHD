package com.completeperspective.xml{	import flash.events.*;	import flash.net.*;		/**	 * Loads RSS syndications	 * @author Adam Colpitts	 */	public class RSSLoader extends EventDispatcher	{		private var _loader : URLLoader;		private var _eventDispatcher : EventDispatcher;				private var _feed : XML;		private var _title : String;		private var _description : String;				public function RSSLoader()		{			_eventDispatcher = new EventDispatcher();			_loader = new URLLoader();			}				/**		 * Loads an RSS Syndication feed		 * 		 * @param feed	URLRequest		 */		public function load( feed : URLRequest ) : void		{			dispatchEvent( new Event( Event.INIT ) );						_loader.addEventListener(Event.COMPLETE, loadComplete );            _loader.addEventListener(Event.OPEN, doEvent);            _loader.addEventListener(HTTPStatusEvent.HTTP_STATUS, doEvent);            _loader.addEventListener(IOErrorEvent.IO_ERROR, doEvent);            _loader.addEventListener(ProgressEvent.PROGRESS, doEvent);            _loader.addEventListener(SecurityErrorEvent.SECURITY_ERROR, doEvent);			_loader.load( feed );		}				private function doEvent( e : Object ) : void		{			trace( "[RSS Loader]: " +  e );		}				private function loadComplete( e : Event ) : void		{			parseFeed( new XML( _loader.data ) );		}				/**		 * Populates local variables when syndication has loaded		 */		public function parseFeed( rss : XML ) : void		{			_feed = rss;			_title = feed.channel.title;			_description = feed.channel.description;						dispatchEvent( new Event( Event.COMPLETE ) );		}				/**		 * Returns a reference to the entire syndication		 * 		 * @return XML		 */		public function get feed() : XML		{			return _feed;		}				/**		 * Returns a reference to the syndications title		 * 		 * @return String		 */		public function get title() : String		{			return _title;		}				/**		 * Returns a referenece to the syndications description		 * 		 * @return String		 */		public function get description() : String		{			return _description;		}	}}