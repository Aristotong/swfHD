package swfhd.view{	import caurina.transitions.*;		import com.completeperspective.display.*;	import com.completeperspective.media.*;		import flash.display.*;	import flash.events.*;	import flash.filters.*;	/**	 * Holds a reference to all visual elements in the Display List	 * 	 * @author Adam Colpitts	 * @version 1.0	 * @created 02-Aug-2008 16:28:14	 */	public class FlashHDView extends Sprite	{		public static const VERSION : String = "1.0.0";					// Singleton instance		static private var _instance : FlashHDView;				private var _playlistContainer : PlaylistContainer;		private var _backdrop : Backdrop;		private var _watermark : Watermark;		private var _player : VideoPlayer;				private var index : Number = 0;				/**		 * Components use ModelLocator.getInstance() to obtain a reference to this Singelton		 * 		 * @return ModelLocator		 */		public static function getInstance() : FlashHDView		{			if( FlashHDView._instance == null ) {				FlashHDView._instance = new FlashHDView( new SingletonEnforcer() );			}			return FlashHDView._instance;		}				public function FlashHDView( enforcer : SingletonEnforcer )		{			init();		}				private function init() : void		{			// Initialization code			trace( this + "initializing..." );						_backdrop = new Backdrop();			_backdrop.name = "backdrop_mc";			addChild( _backdrop );									_playlistContainer = new PlaylistContainer();			_playlistContainer.name = "playlist_mc";			addChild( _playlistContainer );						_watermark = new Watermark();			_watermark.name = "watermark_mc";			_watermark.x = 600;			_watermark.y = 380;			addChild( _watermark );		}				public function loadAssets( swf : String ) : void		{			trace( this + "loading assets..." );			dispatchEvent( new Event( Event.COMPLETE ) );		}				public function showPlaylist( pl : Playlist ) : void		{			_playlistContainer.y = stage.stageHeight - 175;			_playlistContainer.playlist = pl;					}				override public function toString() : String		{			return "[FlashHD View " + VERSION + " ]: ";		}					}//end FlashHDView}class SingletonEnforcer{}